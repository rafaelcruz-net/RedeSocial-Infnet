    @if (ViewBag.UrlGerada != null)
    {
        <a href="@ViewBag.UrlGerada" target="_blank">Ver Arquivo no azure</a>
    }

    <form asp-action="Create" asp-controller="Upload" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label >Arquivo</label>
            <input type="file" class="form-control" placeholder="file" name="file" id="file">
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>